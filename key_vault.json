{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "",
    "parameters": {
        "keyVaultName": {
            "type": "string",
            "defaultValue": "NewARMVaultP",
            "metadata": {
                "description": "Name of the Key Vault"
            }
        },
        "accessPolicies": {
            "type": "array",
            "defaultValue": [
                {
                    "tenantId": "1d023485-4e7b-481c-84b5-177d5a4d5729",
                    "objectId": "0fc42cb1-71a9-40b7-833d-367dcb38055f",
                    "permissions": {
                        "keys": ["all"],
                        "secrets": ["all"]
                    }
                }
                    ],
                    "metadata": {
                "description": "Access policies object "
            }
        },
        "enableVaultForVolumeEncryption": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "Specifies if the vault is enabled for volume encryption"
            }
        },
        "secrets": {
            "type": "array",
            "defaultValue":  [
                {
                    "secretName": "ConnectionString",
                    "secretValue": "SecureString1"
                }
            ],
            "metadata": {
                "description": "all secrets "
            }
        },
    "resources": [
            {
                "type": "Microsoft.KeyVault/vaults",
                "name": "[parameters('keyVaultName')]",
                "location": "[resourceGroup().location]",
                "accessPolicies": "[parameters('accessPolicies')]",
                
            },
            {
                "type": "Microsoft.KeyVault/vaults/secrets",
                "name": "[concat(parameters('keyVaultName'), '/', parameters('secrets')[copyIndex()].secretName)]",
                "properties": {
                    "value": "[parameters('secrets')[copyIndex()].secretValue]"
                },
                "dependsOn": [
                    "[concat('Microsoft.KeyVault/vaults/', parameters('keyVaultName'))]"
                ],
                "copy": {
                    "name": "secretsCopy",
                    "count": "[length(parameters('secrets'))]"
                }
            }
        ]
    }        
}
